@model List<Registration>  
@{
    ViewData["Title"] = "Summary";
    var lastUser = Model.Last();
}
 
<style>
    .row{
        padding: 20px;
    }
    div[class="row"] {
        outline: 1px dotted rgba(0, 0, 0, 0.25);
    }

    div[class^="col-"] {
        background-color: rgba(255, 0, 0, 0.2);
        outline: 1px dotted rgba(0, 0, 0, 0.5);
    }
</style>

<div class="container">
    <div class="page-header">
        <h1>Welcome @lastUser.UserName to David's Portfolio</h1>
    </div>
    <hr/>
    @foreach(var item in Model)
    {
        <div .class="row">
            <div class="col-sm">
                @item.UserName
                @item.Email
                
            </div>
        </div>
    }
    
</div>
<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="subtitle">
                I am a student at Umich - dearborn as
                Electrical-Engineering Major.
                Graduating in December!
            </div>
        </div>
        <div class="col-sm">
            <div class="subtitle">
                I am also a student at Grand Circus
                enrolled in .NET C# after hours bootcamp.
                Graduating in September!

            </div>
        </div>
        <div class="col-sm">
            <div class="subtitle">
                This is my unbox guru youtube channel!
                I had this for fun while in first couple years of college.
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="subtitle">
                I enjoy gaming competitively on my leasure time.
            </div>
        </div>
        <div class="col-sm">
            <div class="subtitle">
                I completed a python 24 hour bootcamp in august of 2019.
                Python is still one of my favorite coding languages!
            </div>
        </div>
        <div class="col-sm">
            <div class="subtitle">
                Won first place in an engineering contest
                at Henry Ford college!
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm">
            <div class="subtitle">
                I enjoy hiking and taking photos of nature.
            </div>
        </div>
        <div class="col-sm">
            <div class="subtitle">
                I also enjoy video production,
                it helps me be creative.
            </div>
        </div>
    </div>
</div>