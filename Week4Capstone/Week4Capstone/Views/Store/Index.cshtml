@model IEnumerable<Week4Capstone.Models.Product>


<style>
    img {
        display: block;
        max-width: 100%;
        max-height: 300px;
    }
    td{
        min-width: 200px;
    }

</style>


<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <h1>@ViewData["Title"]</h1>
    </li>
    <li>
        @if (TempData.Peek("Success") != null)
        {
            <div class="fade">
                @TempData["Success"]
            </div>
        }
    </li>
</ul>

<table class="table">
    <thead>
        <tr>
            <th>Product:</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model =>  model.Price)
            </th>
            <th>
                <a asp-action="CheckOut"> Cart: @ViewBag.Count</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="thumbnail img-responsive" src=@item.URL />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="AddToCart" asp-route-id="@item.ProductID">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>
   