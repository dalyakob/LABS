@{
}

@model Movie
@{
    ViewData["Title"] = "Welcome To Our Movie List";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h4>Search by Title or Genre</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="SearchResultTitle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title:</label>
                <input asp-for="Title" class="form-control" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Movies" class="btn btn-primary">Submit</button>
            </div>
        </form>

        <form asp-controller="Movies" asp-action="SearchResultGenre" method="post">
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre:</label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreType>()" class="form-control"></select>
            </div>

            <div class="form-group">
                <button type="submit" value="Registration" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<hr/>

<h4>Register Movie</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Movies" asp-action="RegisterMovie" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Title:</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre:</label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreType>()" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Runtime" class="control-label">Runtime:</label>
                <input asp-for="Runtime" class="form-control" required />
            </div>

            <div class="form-group">
                <button type="submit" value="Registration" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}