@model MoviesModel

@{
    ViewData["Title"] = "Results for Movies searched by Title";
}

<h1>@ViewData["Title"]</h1>
<hr />



@foreach(var item in ViewBag.MoviesList)
{
    @if (item.Title.ToLower() == Model.Title.ToLower())
    {
        <div class="row">
            <div class="col-sm">
                @item.Title,
                @item.Genre
            </div>
        </div>
    }

}
