@model MoviesModel

@{
    ViewData["Title"] = "Results for Movies searched by Genre";
}


<h1>@ViewData["Title"]</h1>
<hr />

@foreach (var item in ViewBag.MoviesList)
{
    @if (item.Genre == Model.Genre)
    {
        <div class="row">
            <div class="col-sm">
                @item.Title,
                @item.Genre
            </div>
        </div>
    }

}
